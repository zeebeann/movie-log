generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  rating      Float   // user rating on a 0.5-5.0 scale
  watchedDate DateTime @db.Date
  posterUrl   String?  // URL returned from autofill API
  externalId  String?  // optional external movie id (IMDB/TMDB)
  createdAt   DateTime @default(now()) @db.Date
  updatedAt   DateTime @updatedAt @db.Date
}
